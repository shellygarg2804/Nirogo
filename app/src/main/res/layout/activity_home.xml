<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/topBar"
        >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_bg"
        android:id="@+id/toolbar"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/blue_bg"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/menu"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/menu"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_weight="6"
            android:layout_width="280dp"
            android:orientation="horizontal"
            android:id="@+id/search"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_rectangle"
            android:gravity="center_vertical"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_marginLeft="10dp"
                android:layout_height="20dp"
                android:src="@drawable/search"/>

            <EditText
                android:layout_width="260dp"
                android:layout_height="40dp"
                android:hint="Search"
                android:textColorHint="@color/Black"
                android:id="@+id/searchItem"/>

        </LinearLayout>



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chatBtn"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/chat_white"
            android:layout_marginTop="10dp"
             />

    </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_300"
        tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    </ScrollView>

    <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:bnc_mode="spread"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_bg"
        >

        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_menu"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:bt_active="true"
            app:bt_colorActive="@color/Black"
            app:bt_colorInactive="@color/White"
            app:bt_icon="@drawable/home"
            app:bt_shape="@drawable/item_bottombar"
            app:bt_title="Home"
            />



        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_add"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:bt_active="true"
            app:bt_colorActive="@color/Black"
            app:bt_colorInactive="@color/White"
            app:bt_icon="@drawable/list"
            app:bt_shape="@drawable/item_bottombar"
            app:bt_badgeBackgroundColor="@color/blue_bg"
            app:bt_title="Appointment"
            />


        <com.gauravk.bubblenavigation.BubbleToggleView
            android:id="@+id/c_item_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:bt_active="true"
            app:bt_badgeBackgroundColor="@color/blue_bg"
            app:bt_colorActive="@color/Black"
            app:bt_shape="@drawable/item_bottombar"
            app:bt_colorInactive="@color/White"
            app:bt_icon="@drawable/user_black"
            app:bt_title="@string/profile_tab"
            />

    </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>
</RelativeLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start|left"
        app:headerLayout="@layout/activity_nav_drawer_header"
        app:menu="@menu/nav_menu" >

    </com.google.android.material.navigation.NavigationView>




</androidx.drawerlayout.widget.DrawerLayout>